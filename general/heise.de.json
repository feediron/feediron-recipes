{
        "name": "heise.de",
        "url": "heise.de",
        "stamp": 1599066467,
        "author": "uqs",
        "match": "heise.de",
        "config": {
                "type": "xpath",
                "xpath": "article",
                "reformat": [
                        {
                                "type": "regex",
                                "pattern": "\/\\.html\/",
                                "replace": ".html?seite=all"
                        }
                ],
                "modify": [
                        {
                                "type": "regex",
                                "pattern": "\/<.?noscript>\/",
                                "replace": ""
                        },
                        {
                                "type": "regex",
                                "pattern": "\/<.?a-(lightbox|bilderstrecke)[^>]*?>\/",
                                "replace": ""
                        }
                ],
                "cleanup": [
                        "h1[contains(@class,'a-article-header__title')]",
                        "div[contains(@class,'a-article-header__service')]",
                        "figure[@class='branding']",
                        "a-collapse[contains(@class,'a-box--collapsable')]",
                        "a-teaser",
                        "a-ad",
                        "aside",
                        "a-script",
                        "a-img",
                        "footer"
                ]
        }
}
